{{! reset style.css }}
<link rel="stylesheet" href="/stylesheets/style.css" />

<div>
    <h1 class="mb-1 restaurant-show-title">修改餐廳：{{restaurant.name}}</h1>

</div>
<div class="mx-5">
    <form action="/restaurants/{{restaurant._id}}/edit?_method=PUT" method="post">
        <div class="form-floating mb-1">
            <input type="text" class="form-control" id="nameInput" name="name" placeholder="餐廳名稱"
                value="{{restaurant.name}}" required>
            <label for="nameInput">餐廳名稱</label>
        </div>
        <div class="form-floating mb-1">
            <input type="text" class="form-control" id="nameEnInput" name="name_en" value="{{restaurant.name_en}}"
                placeholder="餐廳英文名稱">
            <label for="nameEnInput">餐廳英文名稱</label>
        </div>
        <div class="form-floating mb-1">
            <input type="text" class="form-control" id="categoryInput" name="category" value="{{restaurant.category}}"
                placeholder="餐廳類別">
            <label for="categoryInput">餐廳類別</label>
        </div>
        <div class="form-floating mb-1">
            <input type="text" class="form-control" id="imageInput" name="image" value="{{restaurant.image}}"
                placeholder="餐廳圖片">
            <label for="imageInput">餐廳圖片</label>
        </div>
        <div class="form-floating mb-1">
            <input type="text" class="form-control" id="locationInput" name="location" value="{{restaurant.location}}"
                placeholder="餐廳地點">
            <label for="locationInput">餐廳地點</label>
        </div>
        <div class="form-floating mb-1">
            <input type="tel" class="form-control" id="phoneInput" name="phone" value="{{restaurant.phone}}"
                placeholder="餐廳電話">
            <label for="phoneInput">餐廳電話</label>
        </div>
        <div class="form-floating mb-1">
            <input type="text" class="form-control" id="googleMapInput" name="google_map"
                value="{{restaurant.google_map}}" placeholder="餐廳地圖">
            <label for="googleMapInput">餐廳地圖</label>
        </div>
        <div class="form-floating mb-1">
            <input type="number" min="1" max="5" step="0.1" class="form-control" id="ratingInput" name="rating "
                value="{{restaurant.rating}}" value="5" placeholder="餐廳評分">
            <label for="ratingInput">餐廳評分</label>
        </div>
        <div class="form-floating mb-1">
            <textarea class="form-control" placeholder="餐廳描述" id="descriptionInput" name="description"
                style="height: 100px">{{restaurant.description}}</textarea>
            <label for="descriptionInput">餐廳描述</label>
        </div>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </form>
</div>